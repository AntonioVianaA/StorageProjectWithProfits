@using StorageProject.Models
@model Ingrediente
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

@using (Html.BeginForm("Alterar", "Estoque", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.IngredienteID)
    <fieldset>
        <legend>Alterar Produto</legend>
        <div id="Nome" class="form-group">
            @Html.Label("Id", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.IngredienteID, new { @readonly = "" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do Ingrediente" }) 
            </div>
        </div>
        <div id="Preco" class="form-group">
            @Html.Label("Preço", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Preço do Ingrediente", @type="number"})
            </div>
        </div>

        <div id="Quantidade" class="form-group">
            @Html.Label("Quantidade", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.QuantEstoque, new { @class = "form-control", @placeholder = "Quantidade do Ingrediente", @type="number" })
            </div>
        </div>

        <div id="Validade" class="form-group">
            @Html.Label("Validade", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Validade, new { @class = "form-control", @placeholder = "Validade Do Ingrediente", @type = "date" })
            </div>
        </div>
        <div id="Descricao" class="form-group">
            @Html.Label("Descriçao", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição do Ingrediente" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Salvar" />
            </div>
        </div>
    </fieldset>
}