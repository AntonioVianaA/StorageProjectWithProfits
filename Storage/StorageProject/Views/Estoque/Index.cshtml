

@{

    ViewBag.Title = "Estoque";
}

<h2>Index 3</h2>
<script src="~/Content/assets/js/MenuAtivo.js"></script>
<script>
    $('#ItemEstoque').addClass('active');


</script>






<link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/4e0e542aed.js"></script>
<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <div class="card card-user">
            <div class="card-header">
                <h2 class="card-title description">Cadastro Estoque</h2>
            </div>
            <div class="card-body">
                <form class="pure-form pure-form-aligned">
                    <fieldset>
                        <div class="pure-control-group" ">
                            @Html.Label("Nome Ingrediente")
                            <input class="col-8" id="NomeIngrediente" type="text" placeholder="Nome do Ingrediente">
                        </div>

                        <div class="pure-control-group">
                            @Html.Label("Preço Ingrediente")
                            <input class="col-8" type="number" step="any" id="PrecoIngrediente" placeholder="Preço do Ingrediente">
                        </div>

                        <div class="pure-control-group">
                            @Html.Label("Quantidade Ingrediente")
                            <input class="col-8" type="number" step="any" id="QuantidadeIngrediente" placeholder="Quantidade do Ingrediente">
                        </div>

                        <div class="pure-control-group">
                            @Html.Label("Data Validade")
                            <input class="form-control col-8" type="date" id="DataValidade">
                        </div>

                        <div class="pure-control-group">
                            @Html.Label("Descrição Ingrediente")
                            <textarea class="col-8" placeholder="Descrição"></textarea>
                        </div>
                        <div class="pure-controls">
                            <button type="submit" class="pure-button pure-button-primary">Cadastrar</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-body">
                <div class="description">
                    <h2>Fresh Bootstrap Table</h2>
                </div>

                <input id="myInput" type="text" placeholder="Search..">

                <table id="myTable" class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Nome</th>
                            <th>Preço</th>
                            <th>Quantidade</th>
                            <th>Data Validade</th>
                            <th>Descrição</th>
                            <th colspan="2">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (StorageProject.Models.Estoque item in Model)
                        {
                        <tr>
                            @*/Pedir para o professor Explicar/*@
                            <td>@item.Ingrediente.Nome</td>
                            <td>@item.Ingrediente.Preco</td>
                            <td>@item.QuantEstoque</td>
                            <td>@item.Ingrediente.Validade.ToShortDateString()</td>
                            <td>@item.Ingrediente.Descricao</td>
                            @*/remover/*@
                            <td>@Html.ActionLink(" ", "Remover", "Produto", null, new { @class = "fas fa-times" })</td>
                            @*/alterar/*@
                            <td>@Html.ActionLink(" ", "Remover", "Produto", null, new { @class = "fas fa-edit" })</td>

                        </tr>

                        }
                    </tbody>
                </table>
                <div>
                    <nav aria-label="Navegação de página exemplo">
                        <ul class="pagination">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    @Html.ActionLink(" ", "Index", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }, new { @class = "page-link fas fa-fast-backward" })
                                </li>
                                <li class="page-item">
                                    @Html.ActionLink(" ", "Index", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }, new { @class = "page-link fas fa-step-backward" })
                                </li>
                            }
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    @Html.ActionLink(" ", "Index", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }, new { @class = "page-link fas fa-step-forward" })
                                </li>
                                <li class="page-item">
                                    @Html.ActionLink(" ", "Index", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }, new { @class = "page-link fas fa-fast-forward" })
                                </li>
                            }
                            <a style="margin-left:80%; position:absolute;">
                                Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                            </a>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

