@model StorageProject.Models.Usuario
@{
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
    <section class="sign-in">

        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/Content/assets/img/signin-image.jpg" alt="sing up image"></figure>
                <a href="@Url.Action("Cadastrar", "Usuario")" class="signup-image-link">Criar uma Conta</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="login-form">
                    <div class="form-group">
                        
      
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Usuario" })

                    </div>
                    <div class="form-group">

                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Senha" })
                        @Html.ValidationMessageFor(model => model.Password, null,
                    new { @class = "text-danger" })
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Login" />
                    </div>
                </form>
            </div>
        </div>

    </section>
}

