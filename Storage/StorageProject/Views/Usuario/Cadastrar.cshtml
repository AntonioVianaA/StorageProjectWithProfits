@model StorageProject.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
    ViewBag.Title = "Registrar";
}
@using (Html.BeginForm("Cadastrar", "Usuario", FormMethod.Post))
{
    <section class="signup">

        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <div class="form-group">
                    
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome" })
                    
                        @Html.ValidationMessageFor(model => model.Nome, null,
                    new { @class = "text-danger" })
                    
                </div>
                <div class="form-group">
                   
                    @Html.TextBoxFor(model => model.Sobrenome, new { @class = "form-control", @placeholder = "Sobrenome" })
                    @Html.ValidationMessageFor(model => model.Sobrenome, null,
                    new { @class = "text-danger" })
                </div>
                <div class="form-group">
                
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Nome de Usuario" })
                    @Html.ValidationMessageFor(model => model.Username, null,
                    new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Username, null,
                    new { @class = "text-danger" })
                </div>

                <div class="form-group">
                 
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Senha" })
                    @Html.ValidationMessageFor(model => model.Username, null,
                    new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Repita sua Senha" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, null,
                    new { @class = "text-danger" })
                </div>
                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Registrar" />
                </div>
            </div>
            <div class="signup-image">
                <figure><img src="~/Content/assets/img/signup-image.jpg" alt="sing up image"></figure>\
                <a href="@Url.Action("Login", "Usuario")" class="signup-image-link">Já é um Membro?</a>
            </div>
        </div>
    </section>
}


